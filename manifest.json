{
  "manifest_version": 3,
  "name": "Meeting Recorder",
  "version": "1.0",
  "description": "A Chrome extension to record meetings",
  "permissions": ["activeTab"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
